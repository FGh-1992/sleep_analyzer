<%- model_class = Profile -%>
<div class="page-header">
  <h1>Profile</h1>
</div>
<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Name) %></th>
      <th><%= model_class.human_attribute_name(:Lastname) %></th>
      <th><%= model_class.human_attribute_name(:Birthdate) %></th>
      <th><%= model_class.human_attribute_name(:Telephone) %></th>
      <th><%= model_class.human_attribute_name(:Gender) %></th>
      <th><%= model_class.human_attribute_name(:User) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.birthdate %></td>
        <td><%= profile.telephone %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.user_id %></td>

        <td><%= link_to t('.Show', :default => t("helpers.links.Show")), profile , :class => 'btn btn-default btn-xs' %>

        <%= link_to t('.Edit', :default => t("helpers.links.edit")), edit_profile_path(profile) , :class => 'btn btn-default btn-xs' %>

        <%= link_to t('.Destroy', :default => t("helpers.links.destroy")),profile, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
        
<br>


<%= link_to t('.new', :default => t("helpers.links.New Profile")),
            new_profile_path,
            :class => 'btn btn-primary' %>