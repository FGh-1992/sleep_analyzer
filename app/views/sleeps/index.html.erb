<%- model_class = Sleep -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @sleeps.each do |sleep| %>
      <tr>
        <td><%= link_to sleep.id, sleep_path(sleep) %></td>
        <td><%= sleep.user_id %></td>
        <td><%= sleep.start_time %></td>
        <td><%= sleep.end_time %></td>
        <td><%=l sleep.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sleep_path(sleep), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sleep_path(sleep),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to t('.new', :default => t("helpers.links.new sleep")),
            new_sleep_path,
            :class => 'btn btn-primary' %>










     
