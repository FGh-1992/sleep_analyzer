<!DOCTYPE html>
<html>
<head>
  <title>SleepAnalyzer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<script src="assets/javascripts/highcharts.js"></script>
<script src="assets/javascripts/exporting.js"></script> 
  <link rel="stylesheet" type="text/css" href="assets/mystyle.css">
  <%= javascript_include_tag "jquery-1.11.1.min","rails", "highcharts" %>

 <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#"><span>Sleep</span>Analyzer</a>
				<ul class="user-menu">
					<li class="dropdown pull-right">
						<% if user_signed_in? %>
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon 
							glyphicon-user"></span> <%= current_user.email%> <span class="caret"></span></a>
							<ul class="dropdown-menu" role="menu">
        					
        					<li><%= link_to 'حساب کاربری', edit_user_registration_path(:id => current_user.id) %></li>
	        				<li><%= link_to 'خروج', destroy_user_session_path, :method => :delete %></li>

     				   	<% else %>
	        				<li><%= link_to 'ورود', new_user_session_path, :method => :create %></li>
						<% end %>

					</li>
				</ul>
			</div>
		</div><!-- /.container-fluid -->
	</nav>


<% if user_signed_in? %>
	<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
		<form role="search">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Search">
			</div>
		</form>
		<ul class="nav menu">
			<li class="active"><a href="../.."><span class="glyphicon glyphicon-dashboard"></span> صفحه اصلی</a></li>
			<li><a href="../../sleeps"><span class="glyphicon glyphicon-th"></span> خواب ها</a></li>
			<li><a href="../../profiles"><span class="glyphicon glyphicon-stats"></span> پروفایل</a></li>
			<li role="presentation" class="divider"></li>
		c</ul>
		
	</div><!--/.sidebar-->
	<div class=" col-sm-9  col-lg-10 main">
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
			<li class="active">صفحه اصلی</li>

		</ol>
	</div><!--/.row-->
<% else %>
	<div class=" col-sm-12  col-lg-12 main">
<%end%>	

			<%= yield %>		
	</div>
</body>
</html>